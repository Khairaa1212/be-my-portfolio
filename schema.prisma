datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Portfolio {
  id        Int      @id @default(autoincrement())
  username  String
  password  String
  firstName String   @map("first_name")
  lastName  String   @map("last_name")
  avatar    String
  hobby     String
  projects  Project[]
}

model Project {
  id                Int       @id @default(autoincrement())
  projectName       String    @map("project_name")
  institutionName   String    @map("institation_name")
  userId            Int       @map("user_id")
  portfolio         Portfolio @relation(fields: [userId], references: [id])
}
